<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/colorRed" >
            </solid>

            <stroke
                android:width="0.5dp"
                android:color="@color/colorWhite" >
            </stroke>

            <corners
                android:radius="4dp"
                android:color="@color/colorRed" >
            </corners>
        </shape>
    </item><!-- pressed -->
    <item
        android:state_focused="true"
        >
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/colorRed" >
            </solid>

            <stroke
                android:width="0.5dp"
                android:color="@color/colorWhite" >
            </stroke>

            <corners
                android:radius="4dp"
                android:color="@color/colorRed" >
            </corners>
        </shape>
    </item><!-- focused -->

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/colorRed" >
            </solid>

            <stroke
                android:width="1px"
                android:color="@color/colorWhite" >
            </stroke>

            <corners
                android:radius="4dp"
                android:color="@color/colorRed" >
            </corners>
        </shape>
    </item><!-- default -->
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/colorBlue2" >
            </solid>
            <stroke
                android:width="0.2dp"
                android:color="@color/colorBlue2" >
            </stroke>
            <corners
                android:radius="4dp"
                android:color="@color/colorBlue2" >
            </corners>
        </shape>
    </item><!-- pressed -->

    <item
        android:state_focused="true"
        >
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/colorBlue2" >
            </solid>
            <stroke
                android:width="0.2dp"
                android:color="@color/colorBlue2" >
            </stroke>
            <corners
                android:radius="4dp"
                android:color="@color/colorBlue2" >
            </corners>
        </shape>
    </item><!-- focused -->

    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/colorBlue5" >
            </solid>
            <stroke
                android:width="0.2dp"
                android:color="@color/colorBlue5" >
            </stroke>
            <corners
                android:radius="4dp"
                android:color="@color/colorBlue5" >
            </corners>
        </shape>
    </item><!-- default -->

</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/adapter_notification_cover"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_color="@color/colorSilver"
                    app:civ_border_width="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0"
                    android:background="@drawable/circl_silver_bg"
                    app:civ_shadow_color="#8BC34A"
                    android:id="@+id/adapter_notification_process_iv"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="head title"
                            android:id="@+id/adapter_notification_head_tv"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp"
                            />



                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title description"
                        android:id="@+id/adapter_notification_des_tv"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="1dp"
                        android:textSize="13dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51 min"
                    android:id="@+id/adapter_notification_time_tv"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dp"
                    android:textSize="9dp"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/adapter_notification_menu_rl"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/textViewOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#8943;"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:textAppearanceLarge" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/adapter_wheels_inches_container_RL"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="90">


        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="69.5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/colorBlack2">

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/colorWhite"
    app:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cat_position1_rl"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="33">

            <RelativeLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:id="@+id/cat_por1_position1_rl"
                android:layout_alignParentEnd="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:id="@+id/cat_por2_position1_rl"
                android:layout_marginStart="4dp"
                android:layout_alignParentBottom="true"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:id="@+id/custom_category_image1_position1"
                android:layout_marginBottom="35dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_category_tv1_position1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginBottom="6dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cat_position2_rl"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="34">

            <RelativeLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:id="@+id/cat_por1_position2_rl"
                android:layout_alignParentEnd="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:id="@+id/cat_por2_position2_rl"
                android:layout_alignParentBottom="true"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:id="@+id/custom_category_image2_position2"
                android:layout_marginBottom="35dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_category_tv2_position2"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginBottom="6dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cat_position3_rl"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="33">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:id="@+id/cat_por2_position3_rl"
                android:layout_marginEnd="4dp"
                android:layout_alignParentBottom="true"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:id="@+id/custom_category_image3_position3"
                android:layout_marginBottom="35dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_category_tv2_position3"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginBottom="6dp"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
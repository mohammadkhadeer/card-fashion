<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fashion.rest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".view.activity.ReportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme44"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAVVeBZ4ra11TGUWcScjWTwJpHKAC-XnlY" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".view.activity.SelectCountryActivity"
            android:theme="@style/AppTheme23"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.Setting" />
        <activity
            android:name=".view.activity.ResultActivity"
            android:theme="@style/AppTheme23"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.SubCategory"
            android:theme="@style/AppTheme23"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.AllCategory"
            android:theme="@style/AppTheme23"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.Cart"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.Language"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.ItemDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.CategoryItem"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.addItem.AddItem"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".view.activity.mainScreem.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />

        <service android:name=".service.FcmMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>